        \begin{tikzpicture}[overlay]
            % \node at (0,0) {\color{black} TEST};
            \node[anchor=east] at (12,1) { \includegraphics[scale=0.175]{graphics/hsbo.pdf}};
        \end{tikzpicture}
    \fi%
}


% Plain header.
\defbeamertemplate*{frametitle}{plain}{%
    % If not title page.
    \ifnum\value{realframenumber}>0%
